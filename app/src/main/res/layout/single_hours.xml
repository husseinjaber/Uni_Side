<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#5e92f3">

    <android.support.v7.widget.CardView
        android:id="@+id/hours_single"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/hours_single_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hours_single_desc"
                app:srcCompat="@mipmap/first_heart" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/hours_single_prof"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hours_single_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/hours_single_prof"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hours_single_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="post timeeee"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/hours_single_prof"
                app:layout_constraintTop_toBottomOf="@+id/hours_single_username" />

            <ImageView
                android:id="@+id/hours_single_mage"
                android:layout_width="370dp"
                android:layout_height="315dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hours_single_prof"
                app:srcCompat="@drawable/imag_holder" />

            <TextView
                android:id="@+id/hours_single_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/back"
                android:text="1"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hours_single_mage"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/hours_single_likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="0 Likes"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/hours_single_like"
                app:layout_constraintStart_toEndOf="@+id/hours_single_like"
                app:layout_constraintTop_toTopOf="@+id/hours_single_like" />

            <ImageButton
                android:id="@+id/hours_single_delete"
                android:layout_width="45dp"
                android:layout_height="44dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/delete_post" />

            <ImageView
                android:id="@+id/comment_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/hours_single_desc"
                app:layout_constraintTop_toBottomOf="@+id/hours_single_desc"
                app:srcCompat="@mipmap/comntt" />

            <ImageView
                android:id="@+id/liked_single"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/hours_single_desc"
                app:layout_constraintEnd_toEndOf="@+id/hours_single_mage"
                app:layout_constraintStart_toStartOf="@+id/hours_single_mage"
                app:layout_constraintTop_toTopOf="@+id/hours_single_mage"
                app:srcCompat="@mipmap/liked" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>